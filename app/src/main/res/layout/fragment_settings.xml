<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bhaskar.aa45.coderevision.Fragments.SettingsFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_form_shape"
        android:id="@+id/delete_solved"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete"
            android:contentDescription="delete_solved"
            android:padding="4dp"
            android:background="@drawable/report_icon_bg"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Delete All Solved Problems"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_form_shape"
        android:id="@+id/delete_tried"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete"
            android:contentDescription="delete_tried"
            android:padding="4dp"
            android:background="@drawable/report_icon_bg"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Delete All Tried Problems"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_form_shape"
        android:id="@+id/delete_wishlist"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete"
            android:contentDescription="delete_wishlist"
            android:padding="4dp"
            android:background="@drawable/report_icon_bg"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Delete All Wishlist Problems"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>