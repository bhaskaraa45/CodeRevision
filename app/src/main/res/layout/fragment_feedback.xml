<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FeedbackFragment"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give rating to our app"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <RatingBar
            android:id="@+id/starRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:progressTint="#F6912B" />

        <EditText
            android:id="@+id/feedbackText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:lines="5"
            android:hint="Give your feedback"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_form_shape"

            />
        <Button
            android:id="@+id/feedbackSubmit"
            android:layout_marginTop="80dp"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue_dark"

            />



    </LinearLayout>


</LinearLayout>